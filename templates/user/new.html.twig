{% extends 'base.html.twig' %}

{% block title %}Le dressing de Bibou - Ajout enfant
{% endblock %}

{% block body %}
	<h1 class='text-center mt-3'>J'ajoute un enfant</h1>

	{{ form_start(form) }}
	<div class="form">
		<input name="{{ field_name(form.prenom) }}" value="{{ field_value(form.prenom) }}" placeholder="Prénom *" class="form-control" required>
		<span class='form-errors'>{{ form_errors(form.prenom) }}</span>

		<button type="submit" class="button-violet-fonce btn mb-4">
			Je valide
		</button>
	</div>
	{{ form_end(form) }}

	<div class="text-center mt-5">
		<a class='button-violet-clair btn' href="{{ path('app_user_enfants_index') }}">Retour à l'accueil</a>
	</div>
{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}Le dressing de
	{{enfant.prenom}}
{% endblock %}

{% block body %}
	<div class="d-flex flex-column gap-3 align-items-center mb-3">
		<div class="titre-client bg-violet-fonce">L'inventaire de
			<span class="cursive">{{ enfant.prenom}}</span>
			<br>
			par cat√©gorie
		</div>
	</div>
	{% if articleCountsBySizeAndCategory %}
		<div class="d-flex flex-column justify-content-center align-items-center gap-3 mb-5">
			{% for categorie, tailleCounts in articleCountsBySizeAndCategory %}
				<div class="violet-card text-center bg-violet-clair p-3 rounded-4 text-white">
					<div class="fw-bold mb-2">{{categorie}}&nbsp;:&nbsp;{{articleCountsByCategory[categorie]}}</div>
					{% for taille, count in tailleCounts %}
						<div>{{ taille }}&nbsp;:&nbsp;{{ count }}</div>
					{% endfor %}
				</div>
			{% endfor %}
		</div>
	{% else %}
		<div class='text-center'>Vous n'avez aucun article</div>
	{% endif %}
{% endblock %}

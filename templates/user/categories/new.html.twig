{% extends 'base.html.twig' %}

{% block title %}Le dressing de Bibou - Les catégories
{% endblock %}

{% block body %}
	<h1 class="titre-client bg-violet-fonce mb-4">
		Les catégories
	</h1>

	<div class="d-flex flex-column gap-2 align-items-center col-md-6  mx-auto">
		{% for categorie in categories %}
			<div class="bg-white rounded-2 p-2 w-50 text-center">
				<div>
					<strong>{{categorie.nom|upper}}</strong>
					<br>
					<small class="fst-italic text-center">
						{% for enfant in categorie.enfants %}
							{{enfant.prenom}}
							{% if not loop.last %},
							{% endif %}
						{% endfor %}
					</small>
				</div>
				<div class="d-flex justify-content-center gap-2 mt-2">
					<a href="{{path('app_user_categories_edit', {'id': categorie.id})}}">
						<i class="fa-solid fa-edit color-violet-fonce"></i>
					</a>
					{{ include('user/categories/_delete_form.html.twig') }}
				</div>

			</div>
		{% else %}
			<div>pas de catégorie</div>
		{% endfor %}
	</div>


	{{ form_start(form) }}
	<div class="add-article-form mb-5 col-10 col-md-6 col-xl-4 mx-auto">
		<div class="mx-auto">
			<input name="{{ field_name(form.nom) }}" value="{{ field_value(form.nom) }}" placeholder="nom de la catégorie *" class="form-control" required>
			<span class='form-errors'>{{ form_errors(form.nom) }}</span>
		</div>

		<div>
			<div class="text-center text-white fw-bold">enfants</div>
			{% for enfant in form.enfants %}
				<div>
					<input type="checkbox" name="{{ field_name(enfant) }}" value="{{ field_value(enfant) }}">
					{{form_label(enfant)}}
				</div>
			{% endfor %}
			<span class='form-errors'>{{ form_errors(form.enfants) }}</span>
		</div>

		<button class="button-vert btn mx-auto">{{ button_label|default('Ajouter') }}</button>
	</div>
	{{ form_end(form) }}

{% endblock %}

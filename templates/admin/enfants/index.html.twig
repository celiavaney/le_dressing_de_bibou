{% extends 'base.html.twig' %}


{% block title %}Le dressing de Bibou - Page enfants admin
{% endblock %}

{% block body %}
	<div class="nom-appli">Le dressing de Bibou</div>
	<h1 class=" text-center p-3">Espace administrateur&nbsp;:
		<br>
		les enfants
	</h1>
	<a href="{{ path('app_admin_enfants_new')}}" class="button-add mb-3">
		<i class="fa-solid fa-square-plus" style="color: #bacf7d;"></i>
	</a>

	<div class="col-11 mx-auto">
		<table class="table table-striped table-bordered table-sticky-header">
			<thead>
				<tr>
					<th class="text-center">Id</th>
					<th>Prenom</th>
					<th>Client</th>
					<th>Actions</th>
				</tr>
			</thead>
			<tbody class="align-middle">
				{% for enfant in enfants %}
					<tr>
						<td class="text-center">{{ enfant.id }}</td>
						<td>{{ enfant.prenom }}</td>
						<td>{{ enfant.user.email }}</td>
						<td>
							<span class="d-flex gap-2 justify-content-center align-items-center">
								<a href="{{ path('app_admin_enfants_show', {'id': enfant.id}) }}">
									<i class="fa-solid fa-eye"></i>
								</a>
								<a href="{{ path('app_admin_enfants_edit', {'id': enfant.id}) }}">
									<i class="fa-solid fa-pen-to-square"></i>
								</a>
								{{ include('admin/enfants/_delete_form.html.twig') }}
							</span>
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="5">Aucun client enregistré</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>

	<div class="text-center mt-5 ">
		<a class='button-2 btn mb-5' href="{{ path('app_admin_home') }}">Retour à l'accueil</a>
	</div>
{% endblock %}

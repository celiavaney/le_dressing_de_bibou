{% extends 'base.html.twig' %}

{% block title %}Le dressing de Bibou - Page enfant admin
{% endblock %}

{% block body %}
	<div class="nom-appli">Le dressing de Bibou</div>
	<h1 class=" text-center p-3">Espace administrateur&nbsp;:
		<br>
		{{ enfant.prenom }}
	</h1>

	<div class="col-11 mx-auto">
		<table class="table table-striped table-bordered">
			<tbody>
				<tr>
					<th>Id</th>
					<td>{{ enfant.id }}</td>
				</tr>
				<tr>
					<th>Prénom</th>
					<td>{{ enfant.prenom }}</td>
				</tr>
				<tr>
					<th>Client</th>
					<td>{{enfant.user.email }}</td>
				</tr>
				<tr>
					<th>Articles</th>
					<td>
						{% for article in enfant.articles %}
							<table>
								<thead>
									<tr>
										<th>Nom</th>
										<th>Catégorie</th>
										<th>Taille</th>
									</tr>
								</thead>
								<tbody class="align-middle">
									<tr>
										<td>{{article.nom}}</td>
										<td>{{article.categorie}}</td>
										<td>{{article.taille}}</td>
									</tr>
								</tbody>
							</table>
						{% else %}
							Aucun article enregistré
						{% endfor %}
					</td>
				</tr>
			</tbody>
		</table>
	</div>

	<div class="d-flex flex-column gap-3 align-items-center my-5">
		<a class='button-2 btn' href="{{ path('app_admin_enfants_index') }}">Retour à la liste enfants</a>
		<div class="d-flex gap-3 justify-content-center align-items-center">
			<a href="{{ path('app_admin_enfants_edit', {'id': enfant.id}) }}">
				<i class="fa-solid fa-pen-to-square"></i>
			</a>
			{{ include('admin/enfants/_delete_form.html.twig') }}
		</div>
	</div>
{% endblock %}

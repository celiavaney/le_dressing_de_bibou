{% extends 'base.html.twig' %}

{% block title %}Tailles index{% endblock %}

{% block body %}
    <h1>Tailles index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for taille in tailles %}
            <tr>
                <td>{{ taille.id }}</td>
                <td>{{ taille.nom }}</td>
                <td>
                    <a href="{{ path('app_admin_tailles_show', {'id': taille.id}) }}">show</a>
                    <a href="{{ path('app_admin_tailles_edit', {'id': taille.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_admin_tailles_new') }}">Create new</a>
{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}Le dressing de Bibou - Page article admin
{% endblock %}

{% block body %}
	<div class="nom-appli">Le dressing de Bibou</div>
	<h1 class=" text-center p-3">Espace administrateur&nbsp;:
		<br>
		{{ article.nom }}
	</h1>

	<div class="col-11 mx-auto">
		<table class="table table-striped table-bordered">
			<tbody>
				<tr>
					<th>Id</th>
					<td>{{ article.id }}</td>
				</tr>
				<tr>
					<th>Client</th>
					<td>{{ article.user.email }}</td>
				</tr>
				<tr>
					<th>Enfant</th>
					<td>{{ article.enfants.prenom }}</td>
				</tr>
				<tr>
					<th>Nom</th>
					<td>{{ article.nom }}</td>
				</tr>
				<tr>
					<th>Photo</th>
					<td><img src="{{ chemin_uploads ~ article.photo }}" alt="photo" class="miniature"></td>
				</tr>
				<tr>
					<th>Sexe</th>
					<td>{{article.sexe}}</td>
				</tr>
				<tr>
					<th>Catégorie</th>
					<td>{{article.categories.nom}}</td>
				</tr>
				<tr>
					<th>Taille</th>
					<td>{{article.tailles.nom}}</td>
				</tr>
				<tr>
					<th>Offert par</th>
					<td>{{article.offertPar}}</td>
				</tr>
				<tr>
					<th>Prix acheté</th>
					<td>{{article.prixAchete}}</td>
				</tr>
				<tr>
					<th>Description</th>
					<td>{{article.description}}</td>
				</tr>
			</tbody>
		</table>
	</div>

	<div class="d-flex flex-column gap-3 align-items-center my-5">
		<a class='button-2 btn' href="{{ path('app_admin_articles_index') }}">Retour à la liste articles</a>
		<div class="d-flex gap-3 justify-content-center align-items-center">
			<a href="{{ path('app_admin_articles_edit', {'id': article.id}) }}">
				<i class="fa-solid fa-pen-to-square"></i>
			</a>
			{{ include('admin/articles/_delete_form.html.twig') }}
		</div>
	</div>

{% endblock %}

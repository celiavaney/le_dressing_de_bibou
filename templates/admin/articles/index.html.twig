{% extends 'base.html.twig' %}

{% block title %}Articles index{% endblock %}

{% block body %}
    <h1>Articles index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Photo</th>
                <th>Sexe</th>
                <th>Description</th>
                <th>PrixAchete</th>
                <th>PrixVente</th>
                <th>OffertPar</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for article in articles %}
            <tr>
                <td>{{ article.id }}</td>
                <td>{{ article.nom }}</td>
                <td>{{ article.photo }}</td>
                <td>{{ article.sexe }}</td>
                <td>{{ article.description }}</td>
                <td>{{ article.prixAchete }}</td>
                <td>{{ article.prixVente }}</td>
                <td>{{ article.offertPar }}</td>
                <td>
                    <a href="{{ path('app_admin_articles_show', {'id': article.id}) }}">show</a>
                    <a href="{{ path('app_admin_articles_edit', {'id': article.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_admin_articles_new') }}">Create new</a>
{% endblock %}
